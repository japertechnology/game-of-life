{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    },
    "requireConfigFile": false,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      2,
      "double"
    ],
    "comma-style": [
      "error",
      "last"
    ]
  }
}
